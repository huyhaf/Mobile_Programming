<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:startColor="#3D5AFE"
                android:endColor="#536DFE"
                android:angle="270"/>
            <corners android:radius="10dp"/>
            <padding android:left="10dp" android:top="10dp"
                android:right="10dp" android:bottom="10dp" />
            <stroke android:width="1dp" android:color="#303F9F"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient android:startColor="#1C3CF0"
                android:endColor="#656C92"
                android:angle="270"/>
            <corners android:radius="20dp"/>
            <padding android:left="10dp" android:top="10dp"
                android:right="10dp" android:bottom="10dp" />
            <stroke android:width="1dp" android:color="#3D5AFE"/>
        </shape>
    </item>
</selector>
